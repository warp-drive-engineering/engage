  "release-it": {
      "plugins": {
          "release-it-lerna-changelog": {
              "infile": "CHANGELOG.md",
              "launchEditor": false
          },
          "release-it-yarn-workspaces": {
              "skipChecks": true,
              "publish": false
          }
      },
      "git": {
          "tagName": "v${version}"
      },
      "github": {
          "release": true,
          "tokenRef": "GITHUB_AUTH"
      },
      "npm": false
  },
  "changelog": {
